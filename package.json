{
  "name": "node-private-tools",
  "version": "2.0.0",
  "description": "personal node tools",
  "keywords": [],
  "main": "dist/node-private-tools.js",
  "typings": "dist/types.d.ts",
  "files": [
    "bin",
    "dist"
  ],
  "author": "empirefox <empirefoxit@sina.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/empirefox/node-private-tools.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/empirefox/node-private-tools#readme",
  "engines": {
    "node": ">=6.0.0"
  },
  "bin": {
    "node-private-tools": "./bin/npt.js",
    "npt": "./bin/npt.js"
  },
  "scripts": {
    "tsc": "tsc --declaration --module amd --sourceMap false && rimraf dist/types.js",
    "init-json2ts": "cd src/schemas/ && json2ts ./json2ts.json ../json2ts/config.ts",
    "json2ts": "ts-node ./src/tools-loader/json2ts.ts",
    "lint": "tslint -e **/node_modules/** -e **/dist/** -e **/test/dist/** -t codeFrame **/*.ts ",
    "prebuild": "rimraf dist && rimraf docs && rimraf test/dist",
    "dev": "webpack-dev-server",
    "build": "cross-env NODE_ENV=production webpack -p && npm run tsc",
    "build:dev": "webpack && npm run tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "deploy-docs": "node tools/gh-pages-publish.js",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "prepush": "npm run test:prod && npm run build",
    "commitmsg": "validate-commit-msg"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "/^((?!src).)/"
    ],
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "dependencies": {
    "ajv": "^5.0.1",
    "axios": "^0.16.1",
    "cheerio": "^0.22.0",
    "cosmiconfig": "^2.1.3",
    "date-fns": "^1.28.4",
    "fluent-ffmpeg": "^2.1.2",
    "fs-plus": "^3.0.0",
    "globby": "^6.1.0",
    "handlebars": "^4.0.8",
    "iconv-lite": "^0.4.17",
    "json-schema-to-typescript": "^4.2.0",
    "lodash": "^4.17.4",
    "ora": "^1.2.0",
    "pg": "^6.1.5",
    "reflect-metadata": "^0.1.10",
    "replace-in-file": "^2.5.0",
    "req-from": "^2.0.0",
    "shelljs": "^0.7.7",
    "stringify-object": "^3.2.0",
    "typeorm": "0.0.11",
    "typescript-formatter": "^5.1.3",
    "unquote": "^1.1.0",
    "yargs": "^8.0.1"
  },
  "devDependencies": {
    "@angular/compiler": "^4.1.1",
    "@angular/core": "^4.1.1",
    "@types/cheerio": "^0.22.1",
    "@types/fluent-ffmpeg": "^2.1.0",
    "@types/handlebars": "^4.0.32",
    "@types/jest": "^19.2.2",
    "@types/json-schema": "^4.0.0",
    "@types/lodash": "^4.14.63",
    "@types/node": "^7.0.2",
    "@types/ora": "^0.3.31",
    "@types/shelljs": "^0.7.1",
    "@types/webpack": "^2.2.7",
    "@types/yargs": "^6.6.0",
    "awesome-typescript-loader": "^3.1.0",
    "codelyzer": "^3.0.1",
    "colors": "^1.1.2",
    "commitizen": "^2.9.5",
    "copy-webpack-plugin": "^4.0.1",
    "coveralls": "^2.11.15",
    "cross-env": "^4.0.0",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.1",
    "jest": "^19.0.2",
    "prompt": "^1.0.0",
    "rimraf": "^2.5.4",
    "rxjs": "^5.3.1",
    "semantic-release": "^6.3.2",
    "ts-jest": "^19.0.0",
    "ts-node": "^3.0.2",
    "tslint": "^5.1.0",
    "tslint-config-standard": "^5.0.2",
    "typedoc": "^0.5.7",
    "typedoc-webpack-plugin": "^1.1.3",
    "typescript": "^2.2.2",
    "uglify-js": "https://api.github.com/repos/mishoo/UglifyJS2/tarball/harmony-v2.8.22",
    "uglifyjs-webpack-plugin": "^0.4.3",
    "validate-commit-msg": "^2.10.1",
    "webpack": "^2.2.0",
    "webpack-node-externals": "^1.5.4",
    "zone.js": "^0.8.10"
  }
}
